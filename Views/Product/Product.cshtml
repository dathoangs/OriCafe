@{
    ViewData["Title"] = "Home Page";
}
@model dynamic

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Sản phẩm</h1>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid"
                aria-describedby="dataTable_info" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Mô tả</th>
                        <th>Khác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.SanPhams)
                    {
                        <tr>
                            <td>@(Model.SanPhams.IndexOf(item) + 1)</td>
                            <td>@item.TenSanPham</td>
                            <td>@item.GiaBan</td>
                            <td>@item.MoTa</td>
                            <td style="align-items: center;"><a href="#" class="btn btn-danger btn-circle delete-button" data-product-id="@item.Id"><i class="fas fa-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-button').click(function () {
            var productId = $(this).data('product-id');
            if (confirm('Bạn có chắc chắn muốn xoá sản phẩm này không?')) {
                $.ajax({
                    url: '/Product/DeleteProduct/' + productId,
                    method: 'POST',
                    success: function () {
                        alert('Sản phẩm đã được xoá thành công');
                        window.location.reload();
                    },
                    error: function () {
                        alert('Không thể xoá sản phẩm');
                    }
                });
            }
        });
    });
</script>